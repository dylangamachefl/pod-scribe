# =================================================================
# PODCAST TRANSCRIBER ENVIRONMENT CONFIGURATION
# =================================================================

# =================================================================
# POSTGRESQL DATABASE (Required for async pipeline)
# =================================================================

# PostgreSQL Connection
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=podcast_transcriber
POSTGRES_USER=podcast_user
POSTGRES_PASSWORD=podcast_password

# Database URL (Async PostgreSQL connection for all services)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://podcast_user:podcast_password@postgres:5432/podcast_transcriber

# =================================================================
# REDIS (Required for event bus and job queue)
# =================================================================

# Redis URL for pub/sub messaging and job queue
REDIS_URL=redis://redis:6379

# =================================================================
# TRANSCRIPTION SERVICE
# =================================================================

# Hugging Face Authentication
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Hardware Configuration
DEVICE=cuda
COMPUTE_TYPE=int8
BATCH_SIZE=4

# AI Models
WHISPER_MODEL=large-v2

# Episode Fetching
EPISODE_DEFAULT_DAYS=7

# =================================================================
# RAG SERVICE
# =================================================================

# Ollama Configuration (required for RAG service)
OLLAMA_API_URL=http://host.docker.internal:11434
OLLAMA_CHAT_MODEL=qwen3:rag
OLLAMA_EMBED_MODEL=nomic-embed-text

# Vector Database
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_NAME=podcast_transcripts

# File Paths (use shared directories)
TRANSCRIPTION_WATCH_PATH=./shared/output
SUMMARY_OUTPUT_PATH=./shared/summaries

# Embedding Configuration (for nomic-embed-text)
EMBEDDING_DIMENSION=768

# Chunk Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=100
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# RAG API Configuration
RAG_API_PORT=8000
RAG_FRONTEND_URL=http://localhost:3000

# =================================================================
# SUMMARIZATION SERVICE
# =================================================================

# Ollama Configuration (local model for summarization)
OLLAMA_SUMMARIZER_MODEL=qwen3:summarizer

# API Configuration
SUMMARIZATION_API_PORT=8002
SUMMARIZATION_FRONTEND_URL=http://localhost:3000

# =================================================================
# TRANSCRIPTION API
# =================================================================

TRANSCRIPTION_API_PORT=8001

# =================================================================
# FRONTEND
# =================================================================

FRONTEND_PORT=3000

# Frontend API URLs (for Vite build)
VITE_RAG_API_URL=http://localhost:8000
VITE_TRANSCRIPTION_API_URL=http://localhost:8001
VITE_SUMMARIZATION_API_URL=http://localhost:8002

# =================================================================
# DEVELOPMENT & TESTING
# =================================================================

# Use real APIs (set to false for production/real usage)
USE_MOCK_API=false
VITE_USE_MOCK_API=false

# Debug logging
DEBUG=false

